<div class="controls" id="{{currentCategory}}-topic-{{next}}">
    <div class="input-append dropdown">
        <input class="input-medium" autocomplete="off" id="{{currentCategory}}-field-{{next}}" name="topic"
               type="text"
               placeholder="Enter topic" data-provide="typeahead" data-items="8"/>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
            <i class="icon-pencil"></i>
        </button>
        <ul class="dropdown-menu pull-right">
            <!-- dropdown menu links -->
            <li><a class="add-topic"><i class="icon-plus"></i> Add topic</a>
            </li>
            <li><a class="enter-subtopic"><i class="icon-edit"></i> Enter sub-topic</a>
            </li>
            <li><a class="remove-topic"><i class="icon-remove"></i> Remove topic</a>
            </li>
        </ul>
    </div>
</div>